[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    migrations,
    .venv,
    .tox,
    build,
    dist,
    *.egg-info,
    .mypy_cache,
    .pytest_cache,
    node_modules
per-file-ignores =
    __init__.py:F401
    settings.py:E501
    urls.py:E501
    tests/*.py:S101
    conftest.py:S101